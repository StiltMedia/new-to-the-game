<!-- Tabs And Accordions -->
<section class="clearfix boxed mt-80 mb-80">

  <!-- Header -->
  <h1 class="header header-style-1 dark normal uppercase oswald animated t-center" data-animation="fadeIn" data-animation-delay="200">
    Did <span class="colored">you</span> Know?
  </h1>

  <!-- Nav Tabs -->
  <div class="tabs custom-tabs col-md-12">
    <!-- Navıgation -->
    <ul class="nav nav-tabs t-center">
      <li class="active"><a href="#baseball" data-toggle="tab" class="uppercase">Baseball</a></li>
      <li><a href="#tennis" data-toggle="tab" class="uppercase">Tennis</a></li>
      <li><a href="#golf" data-toggle="tab" class="uppercase">Golf</a></li>
      <li><a href="#soccer" data-toggle="tab" class="uppercase">Soccer</a></li>
    </ul>
    <!-- Tab panes -->
    <div class="tab-content">

      <!-- Tab -->
      <div class="tab-pane fade in active clearfix t-center" id="baseball">
        <!-- Left Icon -->
        <p class="note">
          Only 3.8% of all college baseball players are Black<br>
          Just 0.9% of all college baseball players are Asian<br>
          Just 0.4% of all college baseball players are listed as American Indian/ Alaskan Native<br>
        </p>
        <%= link_to 'More Facts', did_you_know_path, class: 'home-button dark-button uppercase normal', style: 'color: white !important;background: rgba(0, 0, 0, 1);margin-top: 20px;' %>
      </div>
      <!-- End Tab -->

      <!-- Tab -->
      <div class="tab-pane fade in clearfix t-center" id="tennis">
        <!-- Tab Texts -->
        <div class="tab-texts pt-10">
          <p class="note">
            Just 5.1% of all collegiate players are Asian.<br>
            Tennis… Only 3.8% of all tennis players are Black.<br>
            Just 5.0% of all tennis players are Hispanic.<br>
            Just 0.3% of all tennis players in college are American Native Hawaiian / Pacific Islander.<br>
          </p>
          <%= link_to 'More Facts', did_you_know_path, class: 'home-button dark-button uppercase normal', style: 'color: white !important;background: rgba(0, 0, 0, 1);margin-top: 20px;' %>
        </div>
      </div>
      <!-- End Tab -->

      <!-- Tab -->
      <div class="tab-pane fade clearfix t-center" id="golf">
        <!-- Tab Texts -->
        <div class="tab-texts pt-10">
          <p class="note">
            Just 0.3% of all golfers are American Indian/ Alaskan Native.<br>
            Only 2.8% of the golf players in the United States are Asian.<br>
            Only 1.9% of golfers are Black.<br>
            Only 2.4% of all golfers are Hispanic.<br>
          </p>
          <%= link_to 'More Facts', did_you_know_path, class: 'home-button dark-button uppercase normal', style: 'color: white !important;background: rgba(0, 0, 0, 1);margin-top: 20px;' %>
        </div>
      </div>
      <!-- End Tab -->

      <!-- Tab -->
      <div class="tab-pane fade clearfix t-center" id="soccer">
        <!-- Text -->
        <p class="note">
          Just 1.4% of all soccer players are Asian<br>
          Only 4.1% of female soccer players in the United States are Black<br>
          Just 10.9% of all soccer players in the United States listed their race as “Other”<br>
        </p>
        <%= link_to 'More Facts', did_you_know_path, class: 'home-button dark-button uppercase normal', style: 'color: white !important;background: rgba(0, 0, 0, 1);margin-top: 20px;' %>
      </div>
      <!-- End Tab -->

    </div><!-- End Tab panes -->
  </div><!--End Tabs Left -->

</section>
<!-- End Tabs And Accordions -->
